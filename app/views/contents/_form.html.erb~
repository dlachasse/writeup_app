<%= form_for(@content) do |f| %>
  <% if @content.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@content.errors.count, "error") %> prohibited this content from being saved:</h2>

      <ul>
      <% @content.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <input type="text" class="form-control" placeholder="Enter Exception Code">
    <%= f.label :code %><br>
    <%= f.text_field :code %>
  </input>
  <div class="field">
    <%= f.label :cat %><br>
    <%= f.text_field :cat %>
  </div>
	<textarea class="form-control" rows="3"></textarea>>
    <%= f.label :desc %><br>
    <%= f.text_area :desc %>
  </div>
  <div class="field">
    <%= f.label :context %><br>
    <%= f.text_field :context %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
